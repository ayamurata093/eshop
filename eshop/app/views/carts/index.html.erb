<p id="notice"><%= notice %></p>

<h1>Carts</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Note</th>
      <th>Qty</th>
      <th colspan="3"></th>
      
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= product.note %></td>
        <td>1</td>
        <td><%= link_to 'prodcut詳細ページへ', product %></td>
        <td><%= render 'carts/delete_button', user: @user, product: product %></td>
      </tr>
    <% end %>
  </tbody>
</table>

